{
  "name": "api-email",
  "version": "0.1.0",
  "description": "Api to send email through of service the Sendgrid",
  "keywords": [
    "nodejs",
    "typescript",
    "api",
    "sendgrid"
  ],
  "main": "dist/index.js",
  "author": {
    "name": "Edixon Alberto",
    "email": "edixonalbertto@gmail.com",
    "url": "https://www.edixonalberto.com"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "prettier --write ./src/**/*.ts",
    "deploy": "git push -f heroku master",
    "create-apikey": "ts-node ./src/utils/createToken.ts",
    "start:dev": "nodemon -e ts -w ./src --exec \"clear && ts-node -r ./src\"",
    "start:prod": "yarn run build && yarn start",
    "build": "tsc",
    "start": "node -r ./dist"
  },
  "dependencies": {
    "@sendgrid/mail": "7.0.0",
    "dotenv": "8.2.0",
    "express": "4.17.1"
  },
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.6",
    "@types/node": "13.11.1",
    "nodemon": "2.0.3",
    "prettier": "2.0.4",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": "12.13.0",
    "yarn": "1.19.1"
  }
}
